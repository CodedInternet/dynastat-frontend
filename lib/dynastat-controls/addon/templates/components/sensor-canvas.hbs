<canvas class="sensors {{if (not conn.rxOpen) "disabled"}}" width="600" height="480">
  Your browser does not support canvas
</canvas>

<div class="row">
  <div class="columns">
    <label>
      Fade Time
      {{input type="range" class="slider" value=fadeTime min=5 max=100}}
    </label>
  </div>
  <div class="columns shrink">
    <label for="showZeros">Show Zeros</label>
    <div class="switch">
      {{input type="checkbox" class="switch-input" checked=showZeros id="showZeros"}}
      <label class="switch-paddle" for="showZeros">
        <span class="switch-active" aria-hidden="true">Yes</span>
        <span class="switch-inactive" aria-hidden="true">No</span>
      </label>
    </div>
  </div>
</div>